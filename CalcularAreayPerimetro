#include <stdio.h>
const int pi = 3.14159265358979323846264338327950288
int main()
{
   float numero = 0; 
   float LadoBase = 0;
   float LadoAltura = 0;
   float Altura = 0;
   float Radio = 0;
    printf("Bienvenido al programa que calcula área y perímetro\n Indique si su figura es:\n");
    printf(" Un paralelogramo (escriba 1), un circulo (escriba 2) o un triángulo(escriba 3):\n");
    scanf("%f",&numero);
    if(numero==1){
        printf("Ingrese la base del paralelogramo");
        scanf("%f",&LadoBase);
        printf("Ingrese el otro lado del paralelogramo");
        scanf("%f",&LadoAltura);
        printf("Ingrese la altura del paralelogramo");
        scanf("%f",&Altura);
        float perimetro = 2*(LadoBase+LadoAltura);
        floar area = LadoBase*LadoAltura);
        printf("El perímetro del paralelogramo es " perimetro"\n El área del paralelogramo es" area);
    }
    if(numero==2){
        printf("Ingrese el radio del círculo");
        scanf("%f",&radio);
        float perimetro = 2*pi*radio;
        floar area = pi*radio*radio);
        printf("El perímetro del circulo es " perimetro"\n El área del circulo es" area);
    return 0;
}